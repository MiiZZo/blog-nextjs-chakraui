{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@ui": ["./src/ui/index.ts"],
      "@lib/*": ["./src/lib/*"],
      "@features/*": ["./src/features/*"],
      "@dto/*": ["./src/dto/*"]
    },
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "pages/404.tsx", "config/setupTests.js"
  ]
}
